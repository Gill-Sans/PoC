<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0001-01-create-address" author="Capgemini">
        <createTable tableName="address">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(255)"/>
            <column name="house_number" type="VARCHAR(50)"/>
            <column name="postcode" type="VARCHAR(20)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="place" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="0001-02-create-store" author="Capgemini">
        <createTable tableName="store">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="store_number" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="store"
                                 baseColumnNames="address_id"
                                 referencedTableName="address"
                                 referencedColumnNames="id"
                                 constraintName="fk_store_address"/>
    </changeSet>

    <changeSet id="0001-03-create-store-phones" author="Capgemini">
        <createTable tableName="store_phones">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="language" type="VARCHAR(50)"/>
            <column name="store_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="store_phones"
                                 baseColumnNames="store_id"
                                 referencedTableName="store"
                                 referencedColumnNames="id"
                                 constraintName="fk_storephones_store"/>
    </changeSet>

    <changeSet id="0001-04-create-article" author="Capgemini">
        <createTable tableName="article">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="article_number" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="0001-05-create-promo" author="Capgemini">
        <createTable tableName="promo">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="article_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="promo"
                                 baseColumnNames="article_id"
                                 referencedTableName="article"
                                 referencedColumnNames="id"
                                 constraintName="fk_promo_article"/>
    </changeSet>

</databaseChangeLog>